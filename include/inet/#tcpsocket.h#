
#include <iostream>
#include <memory>
#include <functional>

#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>

#include "../base/addr.h"
#include "../base/basesocket.h"


namespace lsock
{
namespace inet
{
    class TcpSocket : public lsock::base::BaseSocket<lsock::base::Connect, struct sockaddr_in>, public std::iostream
    {
    public:
	TcpSocket()
	    : lsock::base::BaseSocket<lsock::base::Connect, struct sockaddr_in>(AF_INET, SOCK_STREAM, 0),
	    std::iostream(new lsock::base::BaseSockBuf(this))
	    { }
    };
}
}
